<section class="profile-dashboard">
<div class=" animate__animated animate__fadeInLeft user-post">
    <h2>Where should we eat?</h2>
    <h5>To edit a restaurant you've already submitted, fill out this form and press the 'Edit' button to the right!</h5>
    <form class="form-box new-locale-form">
        <label class="form-text">Restaurant Name:</label>
            <input type="text" placeholder="Olive Garden" class="form-input" id="locale-name">
        <label class="form-text">Type of Food:</label>
            <input type="text" placeholder="Italian" class="form-input" id="locale-type">
        <label class="form-text">How many $'s on a scale of 1-3:</label>
            <input type="text" maxlength="3" placeholder="$$$" class="form-input" id="locale-price">
        <label class="form-text">Address:</label>
          <input type="text" placeholder="1234 Vienna Dr, Sicily City, IT 56789" class="form-input" id="locale-address">
        <label class="form-text">Description:</label>
          <textarea id="locale-description" placeholder="An American casual dining restaurant chain specializing in Italian-American cuisine. A nice place to take your family and enjoy delicious breadsticks."></textarea>
        <button type="submit" class="form-btn">submit</button>
    </form>

</div>

<div class="animate__animated animate__fadeInRight user-posted">
    <h2>My Restaurants</h2> 
        {{#each values as |values|}} 
    <div class="user-restaurants">
        <a href="/api/details/{{values.id}}"><h3>{{values.name}}</h3></a>
        <div>
            <button class="user-btn edit-locale-btn" data-id="{{values.id}}">Edit</button>
            <button class="user-btn delete-locale-btn" data-id="{{values.id}}">Delete</button>
        </div>
    </div>
    {{/each}}
</div>
</section>

<script src="./js/profile.js"></script>